<div class="flex flex-col ">
  <div>
<% if flash[:success] %>
  <p><%= flash[:success] %></p>
<% end %>
  <h1 class="font-bold text-4xl">Kittens#index</h1>
  <p>Find me in app/views/kittens/index.html.erb</p>
  <% @kittens.each do |kitten| %>
    <div class="my-4">
      <p class="text-2xl">ID: <%= kitten.id %></p>
      <p class="text-2xl">Name: <%= kitten.name %></p>
      <p class="text-2xl">Age: <%= kitten.age %></p>
      <p class="text-2xl">Cuteness: <%= kitten.cuteness %></p>
      <p class="mb-4 text-2xl">Softness: <%= kitten.softness %></p>
      <%= link_to "Edit", edit_kitten_path(kitten), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
      <%= link_to "Destory", kitten_path(kitten) , class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }   %>
    </div>
  <% end %>
</div>
